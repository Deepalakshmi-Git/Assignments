<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/card_bg"
    android:elevation="48dp"
    android:outlineSpotShadowColor="@color/colorElevationShadow"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID :"
        android:textColor="@color/colorDisabledText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtIDVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtTitle"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title :"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorDisabledText"
        app:layout_constraintTop_toBottomOf="@id/txtId"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtTitleVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxxxxcxxxxxxxxx"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/txtTitle"
        app:layout_constraintStart_toEndOf="@+id/txtTitle"/>
    <TextView
        android:id="@+id/tvMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More.."
        android:textColor="@color/colorBlueTextLine"
        android:textSize="10sp"
        android:gravity="left"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleVal" />
    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_line"
        app:layout_constraintTop_toBottomOf="@+id/tvMore"
        android:layout_marginTop="10dp" />
    <LinearLayout
        android:id="@+id/detail_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view1">
        <TextView
            android:id="@+id/txtBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@id/txtTitle"
            app:layout_constraintStart_toEndOf="@+id/txtTitle"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>