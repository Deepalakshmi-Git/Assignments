<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedView">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/dettoolbarView"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|enterAlways|snap">
        <TextView
            android:id="@+id/tvToolbarTitle"
            style="@style/StyleToolbarTitle"
            android:text="Android Assessment"
            android:paddingLeft="10dp"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/txtDetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxxxxxxxcxxxxxxxxx"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/dettoolbarView" />

    <TextView
        android:id="@+id/txtDetBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xxxxxxxxcxxxxxxxxx"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtDetTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>